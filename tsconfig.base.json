{
  "compilerOptions": {
    "rootDir": ".",
    "target": "ESNEXT",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["ESNext"],
    "strict": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": false
  },
  "include": ["./"],
  "exclude": ["**/__tests__"]
}
